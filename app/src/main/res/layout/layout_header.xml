<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="152dp"
    android:layout_marginTop="20dp"
    android:background="@color/colorPrimary">

    <ImageView
        android:id="@+id/iv_logo_header"
        android:layout_width="150dp"
        android:layout_height="72dp"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/iwak_logo"/>

    <TextView
        android:id="@+id/tv_label_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/iv_logo_header"
        android:text="@string/drawer_menu"
        android:textSize="@dimen/text_large"
        android:textColor="@color/textColorSoftDark"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="@color/colorCloudyBlue"/>

</RelativeLayout>
